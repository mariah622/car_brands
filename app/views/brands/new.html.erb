<h2>Create a Brand </h2>
<%= form_for (@brand) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :year_created %>
    <%= f.number_field :year_created %>
    
    <br> 
<h2>Create a Car </h2>

    <%= f.fields_for :cars do |s| %>
        <br>
        <%= s.label :name %>
        <%= s.text_field :name %>
        <br>
        <%= s.label :year %>
        <%= s.number_field :year%>
        <br>
        <%= s.label :price %>
        <%= s.number_field :price, step: 0.01 %>
        <br>
        <%= s.label :condition %>
        <%= s.text_field :condition%>
        <br>
        <%= s.label :color %>
        <%= s.text_field :color %>
        <hr>
    <% end %>

    <%= submit_tag "Create brand and cars" %>
<% end %> 