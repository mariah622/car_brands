<% if @brand.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@brand.errors.count, "error") %> prohibited this brand from being saved:</h2>

    <ul>
      <% @brand.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<h2>Create a Brand </h2>
<%= form_for (@brand) do |f| %>

    <%= render partial: 'form', locals: { fp: f} %>

<h2>Create a Car </h2>

    <%= f.fields_for :cars do |s| %>
        <br>
        <%= s.label :name %>
        <%= s.text_field :name %>
        <br>
        <%= s.label :year %>
        <%= s.number_field :year%>
        <br>
        <%= s.label :price %>
        <%= s.number_field :price, step: 0.01 %>
        <br>
        <%= s.label :condition %>
        <%= s.text_field :condition%>
        <br>
        <%= s.label :color %>
        <%= s.text_field :color %>
        <br>
    <% end %>

    <%= submit_tag "Create brand and cars" %>
<% end %> 