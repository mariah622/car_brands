<h1>Car Form</h1>

<% if @car.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h2>

    <ul>
      <% @car.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@car) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :year %>
    <%= f.number_field :year%>
    <br>
    <%= f.label :price %>
    <%= f.number_field :price, step: 0.01 %>
    <br>
    <%= f.label :condition %>
    <%= f.text_field :condition%>
    <br>
    <%= f.label :color %>
    <%= f.text_field :color %>
    <br>
   

    <%= submit_tag "Create Car" %>
<% end %>
